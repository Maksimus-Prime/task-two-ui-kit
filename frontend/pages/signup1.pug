include ../../blocks/button/button.pug
include ../../blocks/form-line/form-line.pug
include ../../blocks/stages/stages.pug
include ../../blocks/page-header/page-header.pug
include ../../blocks/page-footer/page-footer.pug
-var data = require('./data.json');
doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title Main page
        script(src="https://www.youtube.com/iframe_api")
        link(rel="stylesheet" href="main.css")
    body
        .signup1-page
            .signup1-page__header
                +page-header({title: "THE BEST MEETING WEBSITE", buttons: [{button: "goback", link: "main.html"}]})
            .signup1-page-content
                .signup1-page-content__steps
                    +stages({steps: "3", current: "1"})
                p.signup1-page-content__note Please enter your phone or email. We'll send you a message with code
                form.signup1-page-content__main-form
                    -var data = data.signup1form;
                    .signup1-page-content__main-form-line
                        +form-line({inputtype: data["phone-field"].inputtype, name: data["phone-field"].name, placeholder: data["phone-field"].placeholder, valid: data["phone-field"].valid})
                    .signup1-page-content__main-form-line
                        +form-line({inputtype: data["name-field"].inputtype, name: data["name-field"].name, placeholder: data["name-field"].placeholder, valid: data["name-field"].valid})
                    .signup1-page-content__main-form-line
                        +form-line({inputtype: data["code-field"].inputtype, name: data["code-field"].name, placeholder: data["code-field"].placeholder, valid: data["code-field"].valid})
                    .signup1-page-content__main-form-line
                        +button({text: "Next", type: "button", link: "signup2.html", color: "green"})
            .signup1-page__footer
                +page-footer({text: "There is some information about this site"})
        script(type="text/javascript" src="main.js")