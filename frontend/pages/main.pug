-var data = require('./data.json');
doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="initial-scale=1, width=device-width")
        meta(name="description" content="one of the pages of meeting site")
        meta(name="keywords" content="main")
        meta(name="author" content="Lamonov Maks")
        title Main page
        link(rel="apple-touch-icon" sizes="180x180" href="favicons/apple-touch-icon.png")
        link(rel="icon" type="image/png" sizes="32x32" href="favicons/favicon-32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="favicons/favicon-16x16.png")
        link(rel="manifest" href="favicons/manifest.json")
        link(rel="mask-icon" href="favicons/safari-pinned-tab.svg" color="#5bbad5")
        meta(name="theme-color" content="#ffffff")
        link(rel="stylesheet" href="main.css")
    body
        .main-page
            .main-page__header
                +page-header({title: "THE BEST MEETING WEBSITE", buttons: [{button: "login", link: "login.html"}, {button: "signup", link: "entering-contact-information.html"}]})
            main.main-page__content
                .main-page__events-calendar-column
                    p
                        a.main-page__allevents-link(href="allevents.html") All events and news
                    .main-page__events-list
                        +events-list(data.eventslist)
                    .main-page__drop-down
                        +drop-down("dropdown", data.dropdown)
                    .main-page__calendar
                        +calendar
                .main-page__search-user-blocks-column
                    p.main-page__note Here you can see people who go to the meeting
                    .main-page__search
                        +search({name: "search"})
                    .main-page__user-block
                        +user-info-block({image: "img/photo2.png", link: "user.html", name: "Sarah Brown", job: "Developer", facebook: "/mock-address/change-me", twitter: "/mock-address/change-me",dribbble: "/mock-address/change-me", theme: "green"})
