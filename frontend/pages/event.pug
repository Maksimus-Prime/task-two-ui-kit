include ../../blocks/button/button.pug
include ../../blocks/map-block/map-block.pug
include ../../blocks/youtube-video/youtube-video.pug
include ../../blocks/event/event.pug
include ../../blocks/circle-progress-bar/circle-progress-bar.pug
include ../../blocks/slider-a/slider-a.pug
include ../../blocks/page-header/page-header.pug
include ../../blocks/page-footer/page-footer.pug
doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title Event
        script(src="https://www.youtube.com/iframe_api")
        link(rel="stylesheet" href="main.css")
    body
        .event-page
            .event-page__header
                +page-header({title: "THE BEST MEETING WEBSITE", buttons: [{button: "goback", link: "main.html"}]})
            main.event-page-content
                .event-page-content__event
                    +event({image: "img/event1.png", day: "24", month: "Aug", title: "This is the title", description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit."})
                .event-page-content__join-button
                    +button({text: "Join", type: "button", link: "none", size: "small", color: "green"})
                p.event-page-content__note At the bottom: I'll go if people are for example 50. On the right: Number of people who go to the event
                .event-page-content__statistics
                    .event-page-content__slider
                        +slider-a({min: "0", max: "100", step: "1"})
                    .event-page-content__progress-bar
                        +circle-progress-bar({value: "55"})
                p.event-page-content__note Some information about an event
                .event-page-content__video
                    +youtube-video({videoId: "RN3Mf3oQ6e8"})
                .event-page-content__map
                    +map-block({id: "map", lat: "56.501", lng: "84.992", zoom: "14", marker: "img/map-marker-icon.png", title: "Meet us!", address: "1259 California st San Francisco, CA"})
            .event-page__footer
                +page-footer({text: "There is some information about this site"})
        script(type="text/javascript" src="main.js")
        script(async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyClpcagWc1LzQgPuGadYKpXCXVchQ3o0Ik&callback=initMap")