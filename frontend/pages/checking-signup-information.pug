include ../../blocks/user-info-block/user-info-block.pug
include ../../blocks/button/button.pug
include ../../blocks/stages/stages.pug
include ../../blocks/page-header/page-header.pug
include ../../blocks/page-footer/page-footer.pug
doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="initial-scale=1, width=device-width")
        meta(name="description" content="one of the pages of meeting site")
        meta(name="keywords" content="signup")
        meta(name="author" content="Lamonov Maks")
        title Signup page
        link(rel="apple-touch-icon" sizes="180x180" href="favicons/apple-touch-icon.png")
        link(rel="icon" type="image/png" sizes="32x32" href="favicons/favicon-32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="favicons/favicon-16x16.png")
        link(rel="manifest" href="favicons/manifest.json")
        link(rel="mask-icon" href="favicons/safari-pinned-tab.svg" color="#5bbad5")
        meta(name="theme-color" content="#ffffff")
        link(rel="stylesheet" href="main.css")
    body
        .checking-signup-information
            .checking-signup-information__header
                +page-header({title: "THE BEST MEETING WEBSITE", buttons: [{button: "goback", link: "main.html"}]})
            main.checking-signup-information__content
                .checking-signup-information__steps
                    +stages({steps: "3", current: "3"})
                p.checking-signup-information__note Please check information about you, check links
                .checking-signup-information__user-block
                    +user-info-block({image: "img/photo1.png", link: "none", name: "John Smith", job: "Ux designer", facebook: "/mock-address/change-me", twitter: "/mock-address/change-me",dribbble: "/mock-address/change-me"})
                .checking-signup-information__buttons
                    .checking-signup-information__button
                        +button({text: "back", type: "button", link: "entering-job-and-social-information.html"})
                    .checking-signup-information__button
                        +button({text: "next", type: "button", link: "main.html", color: "green"})
            .checking-signup-information__footer
                +page-footer({text: "There is some information about this site"})
        script(type="text/javascript" src="main.js")