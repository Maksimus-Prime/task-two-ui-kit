doctype html
html
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width")
		title Main page
		script(src="https://www.youtube.com/iframe_api")
		link(rel="stylesheet" href="main.css")
	body
		.layout
			.layout-buttons
				include ../blocks/button/button.pug
				h3.layout__title Standard Buttons
				+button("Button","button","small","green")
				+button("Button","button","default","green")
				+button("Button","button","default")
				+button("Button","button","small")
			.layout-arrow-buttons
				include ../blocks/arrow-button/arrow-button.pug
				h3.layout__title Arrow Buttons
				+arrow-button("left")
				+arrow-button("right")
				+arrow-button("left","disabled")
				+arrow-button("right","disabled")
			.layout-circle-progress-bars
				include ../blocks/circle-progress-bar-b/circle-progress-bar-b.pug
				include ../blocks/circle-progress-bar/circle-progress-bar.pug
				h3.layout__title Percentages / Pie chart
				+circle-progress-bar("0")
				+circle-progress-bar("38")
				+circle-progress-bar("62")
				+circle-progress-bar("89")
				+circle-progress-bar-b
			.layout-sliders
				include ../blocks/slider-a/slider-a.pug
				include ../blocks/slider-b/slider-b.pug
				h3.layout__title Sliders
				+slider-a("price","0","100","1")
				+slider-b("yoursalary","0","100","25")
			.layout-stages
				include ../blocks/stages/stages.pug
				h3.layout__title Stages
				+stages("5","3")
			.layout-form-elements
				include ../blocks/form/form.pug
				include ../blocks/toggles/toggles.pug
				include ../blocks/tick-box/tick-box.pug
				h3.layout__title Form elements
				.layout-form-elements-container.clearfix
					.layout-form-elements-container__left-block
						+form
					.layout-form-elements-container__right-block
						h3.layout__title Toggles
						+toggles("noadult")
						+toggles("adult","active")
						h3.layout__title Tick boxes
						+tick-box("male","active")
						+tick-box("female")
			.layout-search-drop-user-profile
				include ../blocks/search/search.pug
				include ../blocks/drop-down/drop-down.pug
				include ../blocks/user-info-block/user-info-block.pug
				-var options = ["Topic 1","Topic 2","Topic 5","Topic 4"];
				.layout-search-drop-user-profile-container.clearfix
					.layout-search-drop-user-profile-container__left-block
						h3.layout__title Search / Drop Down
						+search("search","on")
						+search("search","off")
						+drop-down("dropdown")
					.layout-search-drop-user-profile-container__right-block
						h3.layout__title User profile
						+user-info-block("img/photo1.png","John Smith", "Ux designer", "#", "#","#")
						+user-info-block("img/photo2.png","Sarah Brown", "Developer", "#", "#", "#", "green")
			.layout-news-events
				include ../blocks/news/news.pug
				include ../blocks/event/event.pug
				h3.layout__title News &amp; Events
				.layout-news-events-container.clearfix
					.layout-news-events-container__left-block
						+news("img/news.png","It's all going downhill","24 August 2013","Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed condimentum aliquet venenatis. Etiam a nisi nunc, a tincidunt eros.")
					.layout-news-events-container__right-block
						+event("img/event1.png","24","Aug","This is the title","Lorem ipsum dolor sit amet, consectetur adipiscing elit.")
			.layout-location
				include ../blocks/map-block/map-block.pug
				h3.layout__title Location
				+map-block("map","56.501","84.992","14","img/map-marker-icon.png")
			.layout-calendar-and-messaging
				include ../blocks/messaging/messaging.pug
				include ../blocks/calendar/calendar.pug
				h3.layout__title Calendar / Messaging
				.layout-calendar-and-messaging-container.clearfix
					.layout-calendar-and-messaging-container__left-block
						+calendar
					.layout-calendar-and-messaging-container__right-block
						+messaging("Sarah Brown","img/photo2.png")
			.layout-video
				include ../blocks/youtube-video/youtube-video.pug
				h3.layout__title Video
				+youtube-video("RN3Mf3oQ6e8")

		script(type="text/javascript" src="main.js")
		script(async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyClpcagWc1LzQgPuGadYKpXCXVchQ3o0Ik&callback=initMap")
