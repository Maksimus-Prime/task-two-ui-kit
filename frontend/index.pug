include ../blocks/button/button.pug
include ../blocks/arrow-button/arrow-button.pug
include ../blocks/pie-chart/pie-chart.pug
include ../blocks/circle-progress-bar/circle-progress-bar.pug
include ../blocks/slider/slider.pug
include ../blocks/stages/stages.pug
include ../blocks/message-form/message-form.pug
include ../blocks/form-line/form-line.pug
include ../blocks/toggles/toggles.pug
include ../blocks/tick-box/tick-box.pug
include ../blocks/search/search.pug
include ../blocks/drop-down/drop-down.pug
include ../blocks/user-info-block/user-info-block.pug
include ../blocks/news/news.pug
include ../blocks/event/event.pug
include ../blocks/map-block/map-block.pug
include ../blocks/messaging/messaging.pug
include ../blocks/calendar/calendar.pug
include ../blocks/youtube-video/youtube-video.pug
-var data = require('./data.json')
doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="initial-scale=1, width=device-width")
        meta(name="description" content="UI KIT page")
        meta(name="keywords" content="ui, uikit")
        meta(name="author" content="Lamonov Maks")
        title UI KIT
        link(rel="apple-touch-icon" sizes="180x180" href="favicons/apple-touch-icon.png")
        link(rel="icon" type="image/png" sizes="32x32" href="favicons/favicon-32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="favicons/favicon-16x16.png")
        link(rel="manifest" href="favicons/manifest.json")
        link(rel="mask-icon" href="favicons/safari-pinned-tab.svg" color="#5bbad5")
        meta(name="theme-color" content="#ffffff")
        script(src="https://www.youtube.com/iframe_api")
        link(rel="stylesheet" href="main.css")
    body
        .layout
            .layout__buttons
                h3.layout__title Standard Buttons
                .layout__button
                    +button({text: "Button", type: "button", link: "/mock-address/change-me", size: "small", color: "green"})
                .layout__button
                    +button({text: "Button", type: "button", link: "none", color: "green"})
                .layout__button
                    +button({text: "Button", type: "button", link: "/mock-address/change-me"})
                .layout__button
                    +button({text: "Button", type: "button", link: "none", size: "small"})
            .layout__arrow-buttons
                h3.layout__title Arrow Buttons
                .layout__arrow-button
                    +arrow-button({direction: "left"})
                .layout__arrow-button
                    +arrow-button({direction: "right"})
                .layout__arrow-button
                    +arrow-button({direction: "left", state: "disabled"})
                .layout__arrow-button
                    +arrow-button({direction: "right", state: "disabled"})
            .layout__progress-bars
                h3.layout__title Percentages / Pie chart
                .layout__progress-bar
                    +circle-progress-bar({value: "0"})
                .layout__progress-bar
                    +circle-progress-bar({value: "38"})
                .layout__progress-bar
                    +circle-progress-bar({value: "62"})
                .layout__progress-bar
                    +circle-progress-bar({value: "89"})
                .layout__progress-bar
                    +pie-chart("2, 3, 6, 7")
            .layout__sliders
                h3.layout__title Sliders
                .layout__float-slider
                    +slider({type: "float", min: "0", max: "100", step: "1"})
                .layout__pips-slider
                    +slider({type: "pips", min: "0", max: "100", step: "25"})
            .layout__stages
                h3.layout__title Stages
                +stages({steps: "5", current: "3"})
            .layout__form-elements
                h3.layout__title Form elements
                .layout__form-elements-container
                    .layout__message-form
                        +message-form(data.messageform)
                    .layout__toggles-and-ticks
                        h3.layout__title.layout__title_margin-top_false Toggles
                        .layout__toggles
                            +toggles({name: "noadult"})
                        .layout__toggles
                            +toggles({name: "adult", active: true})
                        h3.layout__title Tick boxes
                        .layout__tick
                            +tick-box({type: "radio", name: "gender", value: "male", active: true})
                        .layout__tick
                            +tick-box({type: "radio", name: "gender", value: "female"})
            .layout__search-drop-user-profile
                .layout__search-drop-user-profile-container
                    .layout__search-drop-side
                        h3.layout__title Search / Drop Down
                        .layout__search
                            +search({name: "search"})
                        .layout__search
                            +search({name: "search-off", not_found: true})
                        .layout__search
                            +drop-down("dropdown", data.dropdown)
                    .layout__user-profile-side
                        h3.layout__title User profile
                        .layout__user-block
                            +user-info-block({image: "img/photo1.png", link: "none", name: "John Smith", job: "Ux designer", facebook: "/mock-address/change-me", twitter: "/mock-address/change-me",dribbble: "/mock-address/change-me"})
                        .layout__user-block
                            +user-info-block({image: "img/photo2.png", link: "/mock-address/change-me", name: "Sarah Brown", job: "Developer", facebook: "/mock-address/change-me", twitter: "/mock-address/change-me",dribbble: "/mock-address/change-me", theme: "green"})
            .layout__news-events
                h3.layout__title News &amp; Events
                .layout__container
                        .layout__news-events-item
                            +news({image: "img/news.png", title: "It's all going downhill", date: "24 August 2013", description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed condimentum aliquet venenatis. Etiam a nisi nunc, a tincidunt eros."})
                        .layout__news-events-item
                            +event({image: "img/event1.png", day: "24", month: "Aug", title: "This is the title", description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit."})
            .layout__location
                h3.layout__title Location
                +map-block({id: "map", lat: "56.501", lng: "84.992", zoom: "14", marker: "img/map-marker-icon.png", title: "Meet us!", address: "1259 California st San Francisco, CA"})
            .layout__calendar-and-messaging
                h3.layout__title Calendar / Messaging
                .layout__calendar-and-messaging-container
                    .layout__calendar-side
                        .layout__calendar
                            +calendar
                    .layout__messaging-side
                        .layout__messaging
                            +messaging({name: "Sarah Brown", image: "img/photo2.png"})
            .layout__video
                h3.layout__title Video
                +youtube-video({videoId: "RN3Mf3oQ6e8"})
        script(type="text/javascript" src="main.js")
        script(async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyClpcagWc1LzQgPuGadYKpXCXVchQ3o0Ik&callback=initMap")