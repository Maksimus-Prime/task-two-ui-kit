mixin drop-down(id,options)
	form.drop-down
		select(class="stylee" name=id+"" id=id+"")
			option
			option(value="1" class="new-v")="Option 1"
			option(value="2" class="new-v")="Option 2"
			option(value="3" class="new-v")="Option 3"
			option(value="4" class="new-v")="Option 4"
			option(value="5" class="new-v")="Option 5"